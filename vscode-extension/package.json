{
  "name": "mage-orchestrator",
  "displayName": "Cobbler",
  "description": "Status dashboard for cobbler-scaffold generation cycles",
  "version": "0.0.1",
  "publisher": "mesh-intelligence",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:configuration.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mageOrchestrator.showDashboard",
        "title": "Mage Orchestrator: Show Dashboard"
      },
      {
        "command": "mageOrchestrator.start",
        "title": "Mage Orchestrator: Generator Start"
      },
      {
        "command": "mageOrchestrator.run",
        "title": "Mage Orchestrator: Generator Run"
      },
      {
        "command": "mageOrchestrator.resume",
        "title": "Mage Orchestrator: Generator Resume"
      },
      {
        "command": "mageOrchestrator.stop",
        "title": "Mage Orchestrator: Generator Stop"
      },
      {
        "command": "mageOrchestrator.reset",
        "title": "Mage Orchestrator: Generator Reset"
      },
      {
        "command": "mageOrchestrator.switch",
        "title": "Mage Orchestrator: Generator Switch"
      },
      {
        "command": "mageOrchestrator.cobblerMeasure",
        "title": "Mage Orchestrator: Cobbler Measure"
      },
      {
        "command": "mageOrchestrator.cobblerStitch",
        "title": "Mage Orchestrator: Cobbler Stitch"
      },
      {
        "command": "mageOrchestrator.viewRequirement",
        "title": "Mage Orchestrator: View Requirement"
      },
      {
        "command": "mageOrchestrator.compareTags",
        "title": "Mage Orchestrator: Compare Tags"
      },
      {
        "command": "mageOrchestrator.compareGenerations",
        "title": "Mage Orchestrator: Compare Generations"
      },
      {
        "command": "mageOrchestrator.selectForCompare",
        "title": "Compare With..."
      },
      {
        "command": "mageOrchestrator.openComparisonDiff",
        "title": "Open Diff"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mage-orchestrator",
          "title": "Cobbler",
          "icon": "activity-icon.svg"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "mageOrchestrator.switch",
          "when": "view == mageOrchestrator.status && viewItem == generation",
          "group": "navigation"
        },
        {
          "command": "mageOrchestrator.selectForCompare",
          "when": "view == mageOrchestrator.status && viewItem == generation",
          "group": "comparison"
        }
      ]
    },
    "views": {
      "mage-orchestrator": [
        {
          "id": "mageOrchestrator.status",
          "name": "Status"
        },
        {
          "id": "mageOrchestrator.issues",
          "name": "Issues"
        },
        {
          "id": "mageOrchestrator.specs",
          "name": "Specifications"
        },
        {
          "id": "mageOrchestrator.comparison",
          "name": "Comparison"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "js-yaml": "^4.1.1"
  }
}
